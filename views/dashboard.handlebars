<link rel="stylesheet" href="https://refreshless.com/nouislider/distribute/nouislider.min.css">
<link rel="stylesheet" href="http://materializecss.com/extras/noUiSlider/nouislider.css">
<section class="events box">
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>

    <div class="container">
        <div class="row">
            <div class="col s12">
                <div id="table" class="">
                    <h2 class="heading"> Dashboard </h2>

                    <ul class="alert-box">
                        {{#if success_msg}}
                            <li class="alert success-msg"> {{success_msg}} </li>
                        {{/if}}

                        {{#if error_msg}}
                            <li class="alert error-msg"> {{error_msg}} </li>
                        {{/if}}
                    </ul>

                    <div class="row">
                        <div class="input-field col s2">
                            <select class="selectCompany">
                                {{#if companies.length}}
                                    {{#each companies}}
                                        <option value="{{_id}}"> {{name}} </option>
                                    {{/each}}
                                {{else}}
                                    <option value="" disabled aria-disabled="">Please add a company</option>
                                {{/if}}
                            </select>
                            <label class="selectCompanyLabel">Select a company</label>
                        </div>
                    </div>

                    <!-- Search bar -->
                    <div class="searchBar left">
                        <div class="input-field s6">
                            <i class="material-icons prefix">search</i>
                            <input type="text" id="search-input" class="search">

                            <label for="search-input">Search</label>
                            <span class="helper-text"> name or date</span>
                        </div>
                    </div>

                    <input type="hidden" id="userID" value="{{user._id}}">

                    <script>

                        // get input element
                        let filterInput = document.getElementById('search-input');

                        // add event listener
                        filterInput.addEventListener('keyup', lookUpText);

                        // This gets called when a user types something
                        function lookUpText(){

                            // get the value
                            let filterValue = document.getElementById('search-input').value.toLowerCase();

                            console.log(filterValue);
                        }

                    </script>


                    <!-- Add Event Button -->
                    <div class="addEventBtn right">
                        <a class="waves-effect waves-light btn-large button-secondary modal-trigger" href="#add-event-modal">
                            <i class="material-icons left">add</i>
                            <span> Add Event </span>
                        </a>
                    </div>

                    <!-- Add Event Form -->
                    <div id="add-event-modal" class="PopUpWindow modal customModal">
                        <div class="modal-content">
                            <a href="#!" class="modal-action modal-close">
                                <i class="material-icons right">close</i>
                            </a>
                            <h4 class="PopupHeading">Add Event </h4>

                            <form id="addEventForm" action="/api/events" method="POST">

                                <!-- Type -->
                                <div class="input-field col s6">
                                    <select name="type" class="eventTypes">
                                        <option value="None" disabled selected>Choose an option</option>
                                        <option value="Wedding">Wedding</option>
                                        <option value="Engagement">Engagement</option>
                                        <option value="Holy Communion">Holy Communion</option>
                                        <option value="Christening">Christening</option>
                                        <option value="Birthday">Birthday</option>
                                    </select>
                                    <label>Event Type <span class="requiredField">*</span></label>
                                </div>

                                <!-- Name -->
                                <div class="input-field col s6">
                                    <input name="name" id="name" type="text" class="validate" required="" aria-required="true">
                                    <label for="name">Name <span class="requiredField">*</span></label>
                                </div>

                                <!-- Date -->
                                <div class="input-field col s4">
                                    <input name="date" id="date" type="text" class="datepicker" required="" aria-required="true">
                                    <label for="date">Date <span class="requiredField">*</span></label>
                                </div>

                                <!-- Storage -->
                                <div class="input-field col s4">
                                    <input name="storage" id="storage" type="text" class="validate">
                                    <label for="storage">Storage</label>
                                </div>

                                <!-- Status -->
                                <div class="input-field col s4">
                                    <select name="status" class="status">
                                        <option class="waiting" value="Waiting">Waiting</option>
                                        <option class="editing" value="Editing">Editing</option>
                                        <option class="completed" value="Complete">Complete</option>
                                        <option class="canceled" value="Canceled">Canceled</option>
                                        <option class="missing" value="Missing">Missing</option>
                                    </select>
                                    <label>Status</label>
                                </div>

                                <!-- Price Slider -->
                                <div class="input-field col s12 priceSection">
                                    <label class="priceLabel">Price $ <span id="price">50</span> </label>
                                    <div onmouseup="" id="priceSlider"></div>
                                </div>

                                <!-- Notes -->
                                <div class="input-field col s6 notesField">
                                    <textarea name="notes" id="notes" class="materialize-textarea"></textarea>
                                    <label for="notes">Notes (additional info/song requests)</label>
                                </div>

                                <!-- Assigned To -->
                                 <div class="input-field col s6">
                                    <select id="teamData" name="assignedTo" class="assignedTo"></select>
                                    <label>Assigned To</label>
                                </div>


                                <div class="modal-footer input-field col s12">
                                    <button class="modal-action button-secondary waves-effect waves-light left" type="submit" id="register-btn-submit">
                                        <span>Submit</span>
                                    </button>

                                    <div class="alert-box">
                                        <span id="validation"></span>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>



                    <!-- EVENTS TABLE -->
                    <div class="tableSection">
                        <table id="eventsTable" class="table bordered highlight centered responsive-table">
                            <thead>
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Event Type</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Status</th>     <!-- Complete: Green, In Progress: yellow, N/A, On hold -->
                                    <th scope="col">Storage</th>
                                    <th scope="col">Notes</th>
                                    <th scope="col">Assigned to</th>

                                </tr>
                            </thead>

                            {{#unless companies}}
                                <tr>
                                    <td class="alert error-msg" colspan="9" aria-colspan="9"> Please go to manager and create a company.</td>
                                </tr>
                            {{/unless}}

                            <tbody id="here">

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

<script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>


<script type="text/javascript" src="/js/search.js"></script>

